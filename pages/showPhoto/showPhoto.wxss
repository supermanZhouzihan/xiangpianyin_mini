/* pages/showPhoto.wxss */

.pageView {
  background-color: rgb(22, 22, 24);
  width: 100%;
  height: 100%;
}

.container {
  /* height: 100%; */
  padding: 20rpx 0;
  box-sizing: border-box;
}

/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}

.searchBtn{
  width: 80%;
  margin: 10rpx auto 0;
  text-align: center;
}
.cuspopup{
  width: 80%;
  padding:60rpx;
  
}
.cuspopup>view:not(:last-child) {
   margin-bottom: 40rpx;
}
.cuspopup>view.info{
  font-size: 26rpx;
}
.confirmBtn{
  width: 80%;
  margin: 10rpx auto 0;
  text-align: center;
  background-color: gray;
  color: #fff;
}

